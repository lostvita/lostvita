{
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "removeComments": false,
    "downlevelIteration": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom",
      "es2019",
      "DOM.Iterable",
      "ScriptHost",
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib"
  ]
 }
 